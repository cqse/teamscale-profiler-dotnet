<Window x:Class="Cqse.Teamscale.Profiler.Commander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cqse.Teamscale.Profiler.Commander"
        mc:Ignorable="d"
        Title="Teamscale Profiler Commander" Height="131.755" Width="296.759" ResizeMode="NoResize">
    <Grid>
        <Label Content="Test Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="69" IsEnabled="False" Height="28" VerticalContentAlignment="Center" />
        <TextBox Height="28" Margin="84,10,10,0" TextWrapping="Wrap" Text="{Binding Path=TestName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" IsEnabled="{Binding Path=IsStopped}" VerticalContentAlignment="Center" />
        <Button Content="{Binding Path=ButtonText}" Margin="10,48,10,16" Height="28" Click="Button_Click" IsEnabled="{Binding Path=HasTestName}" />
        <!--Label Margin="10,88,10,10" IsEnabled="False" Content="{Binding Path=StatusText}" /-->
    </Grid>
</Window>
